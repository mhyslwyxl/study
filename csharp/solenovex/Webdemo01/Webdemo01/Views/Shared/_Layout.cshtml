<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <enviroment include="Developement">
        <link rel="stylesheet" asp-href-include="css/*" asf-href-exclude="all.min.css" />
    </enviroment>
    <enviroment exclude="Developement">
        <link rel="stylesheet" asp-href-include="all.min.css" />
    </enviroment>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                <img asp-append-version="true" alt="logo" src="~/images/logo.png" style="height:60px;" />
            </div>
            <div class="col-md-10">
                <span class="h2">@ViewBag.Title</span>
            </div>
        </div>
        <div class="col-md-12">
            @RenderBody()
        </div>
    </div>
</body>
</html>
